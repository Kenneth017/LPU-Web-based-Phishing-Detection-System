{
  "manifest_version": 3,
  "name": "PhishGuard Real-Time Checker",
  "version": "1.0",
  "description": "Check URLs in real-time with PhishGuard",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "ws://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "warning.png"
  }
}