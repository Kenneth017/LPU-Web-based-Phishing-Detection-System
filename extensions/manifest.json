{
  "manifest_version": 3,
  "name": "Email Phishing Detection",
  "version": "1.0",
  "description": "Real-time email analysis for phishing detection",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "management",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "wss://phishing-detection-system-jig1.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*",
        "*://outlook.office.com/*",
        "*://outlook.live.com/*",
        "*://yahoo.mail.com/*"
      ],
      "js": ["content-email.js"],
      "css": ["css/email_modal.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "warning.png"
  }
}
